{
  "compilerOptions": {
    "target": "ES6",
    "module": "Commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"],                  /* Skip type checking all .d.ts files. */
  },
  "include": ["src/**/*", "src/server.ts", "src/app.ts"],
  "exclude": ["node_modules", "dist"]
}
